@using Utility;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title >@ViewData["Title"] - BookMatch</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Tom-Select CSS (اختياري) -->
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.0.0-rc.4/dist/css/tom-select.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.0.0-rc.4/dist/js/tom-select.complete.min.js"></script>

    <!-- CSS محلي -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookMatch.styles.css" asp-append-version="true" />
    


    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-success" style="position: fixed; top: 0; width: 100%; z-index: 1050; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-broadcast-tower"></i>
                    FootLive
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       @*  <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li> *@
                       @*  <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                       
                        @if (!(User.IsInRole(SD.AdminRole)))
                        {
                            <li>
                                <a class="nav-link text-white" asp-area="user" asp-controller="cart" asp-action="Index"><i class="bi bi-cart"></i> </a>
                            </li>
                            <li>
                                <a class="nav-link text-white" asp-area="user" asp-controller="SupportTicket" asp-action="create">Contact Support</a>
                            </li>

                        }
                        @if (User.IsInRole(SD.AdminRole))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person"></i> Management System
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Match" asp-action="Index">Matches</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Team" asp-action="Index">Teams</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Stadium" asp-action="Index">Stadium</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="League" asp-action="Index">Leagues</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="TicketCategory" asp-action="Index">Ticket Categories</a></li>
                                    <div class="dropdown-divider"></div>
                                   
                                <li class="nav-item">
                                        <a class="dropdown-item" asp-area="User" asp-controller="Purchase" asp-action="Index">Purchase</a>
                                </li>
                                   <li><a class="dropdown-item" asp-area="admin" asp-controller="Management" asp-action="previousMatches">previous Matches</a></li>
                                </ul>
                            </li>


                        }
                        @if (User.IsInRole(SD.AdminRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Admin" asp-controller="Support" asp-action="AllUser"><i class="bi bi-person-lines-fill"></i> Users</a>
                            </li>
                            <li>
                                <a class="nav-link text-white bi bi-envelope-open" asp-area="Admin" asp-controller="Support" asp-action="Index"> </a>
                            </li>


                        }
                       
                       
                       
                    </ul>
                </div>
            </div>
            <div>
                <partial name="_LoginPartial"></partial>
            </div>
        </nav>
        <div style="margin-top: 130px;"></div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-success">
        <div class="text-center">
            <span class="text-dark">&copy; 2024</span> -
            <span class="text-light">BookMatch</span> - <a asp-area="" asp-controller="Home" class="text-black" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- JavaScript محلي -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Ads", required: false)
    
</body>
</html>
