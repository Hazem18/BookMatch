@model IEnumerable<Team>

@{
    ViewData["Title"] = "Teams List";
}

<h1 class="text-center text-success">Teams</h1>

<a asp-action="Create" class="btn btn-football add-btn">Add New Team</a>

<table class="table table-bordered table-football">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Stadium</th>
            <th>Leagues</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var team in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@team.Name</td>
                    <td>@team.Stadium.Name</td>
                    <td>
                        @if (team.TeamLeagues.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach (var league in team.TeamLeagues.Select(tl => tl.League))
                                {
                                    <li>@league.Name</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No Leagues</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-football btn-sm">Edit</a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-team-id="@team.Id">Delete</button>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No teams available.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Team?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" name="Id" id="teamIdInput" value="" />
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget; // Button that triggered the modal
        const teamId = button.getAttribute('data-team-id'); // Extract info from data-* attributes

        // Update the modal's form input value
        const input = document.getElementById('teamIdInput');
        input.value = teamId;
    });
</script>
<style>
    .table-football {
        background-color: #f3fff3;
        border: 1px solid #28a745;
        box-shadow: 0 4px 20px rgba(40, 167, 69, 0.2);
        border-radius: 10px;
        overflow: hidden;
    }

    .table-football th {
        background: linear-gradient(45deg, #28a745, #218838);
        color: white;
        text-align: center;
        font-size: 1.2rem;
        padding: 12px;
        border: none;
    }

    .table-football td {
        padding: 10px;
        text-align: center;
        vertical-align: middle;
        border: 1px solid #e0e0e0;
    }

    .table-football tr:nth-child(even) {
        background-color: #eaffea;
    }

    .table-football tr:hover {
        background-color: #d4f8d4;
        transition: background-color 0.3s ease;
    }

    .btn-football {
        display: inline-block;
        color: white;
        background: linear-gradient(45deg, #28a745, #218838);
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        font-size: 0.9rem;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-football:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(40, 167, 69, 0.4);
    }

    .btn-danger {
        display: inline-block;
        color: white;
        background: linear-gradient(45deg, #dc3545, #c82333);
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        font-size: 0.9rem;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(220, 53, 69, 0.4);
    }

    .add-btn {
        float: right;
        margin-bottom: 15px;
        color: white;
        background: linear-gradient(45deg, #006400, #228B22);
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
        transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }

    .add-btn:hover {
        background: linear-gradient(45deg, #228B22, #006400);
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(0, 100, 0, 0.5);
    }
</style>
