@model IEnumerable<Stadium>

@{
    ViewData["Title"] = "Stadiums Table";
}

<h1 class="text-center text-success">Stadiums</h1>

<a asp-action="Create" class="btn btn-football add-btn">Add New Stadium</a>

<table class="table table-bordered table-football">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Capacity</th>
            <th>Location</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())

        {

            int index = 1;



            foreach (var stadium in Model)

            {
                <tr>
                    <td>@index</td>
                    <td>@stadium.Name</td>
                    <td>@stadium.Capacity</td>
                    <td><a href="@stadium.LocationUrl" target="_blank">View Location</a></td>
                    <td>@stadium.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@stadium.Id" class="btn btn-football btn-sm">Edit</a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-stadium-id="@stadium.Id">Delete</button>
                    </td>
                </tr>
                index++;

            }

        }

        else

        {
            <tr>
                <td colspan="6" class="text-center text-muted">No stadiums available.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this stadium?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" name="Id" id="stadiumIdInput" value="" />
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget; // Button that triggered the modal
        const stadiumId = button.getAttribute('data-stadium-id'); // Extract info from data-* attributes

        // Update the modal's form input value
        const input = document.getElementById('stadiumIdInput');
        input.value = stadiumId;
    });
</script>

<style>
    .table-football {
        background-color: #f3fff3;
        border: 1px solid #28a745;
        box-shadow: 0 4px 20px rgba(40, 167, 69, 0.2);
        border-radius: 10px;
        overflow: hidden;
    }

        .table-football th {
            background: linear-gradient(45deg, #28a745, #218838);
            color: white;
            text-align: center;
            font-size: 1.2rem;
            padding: 12px;
            border: none;
        }

        .table-football td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
            border: 1px solid #e0e0e0;
        }

        .table-football tr:nth-child(even) {
            background-color: #eaffea;
        }

        .table-football tr:hover {
            background-color: #d4f8d4;
            transition: background-color 0.3s ease;
        }

    .btn-football {
        color: white;
        background: linear-gradient(45deg, #28a745, #218838);
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        font-size: 0.9rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-football:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(40, 167, 69, 0.4);
        }

    .btn-danger {
        color: white;
        background: linear-gradient(45deg, #dc3545, #c82333);
        border: none;
        border-radius: 5px;
        padding: 6px 12px;
        font-size: 0.9rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(220, 53, 69, 0.4);
        }

    .add-btn {
        float: right;
        margin-bottom: 15px;
        color: white;
        background: linear-gradient(45deg, #006400, #228B22);
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }

        .add-btn:hover {
            background: linear-gradient(45deg, #228B22, #006400);
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(0, 100, 0, 0.5);
        }
</style>
