@using Models.ViewModels;
@model LeagueVMEdit

<div class="container mt-5">
    <div class="row align-items-center mb-3">
        <div class="col-12 text-center">
            <h2 class="text-success">Edit League</h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-end">
            <a href="/Admin/League/Index" class="btn btn-secondary">Back to Leagues</a>
        </div>
    </div>

    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">League Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="LogoUrl" class="form-label">Logo</label>
                    <input asp-for="LogoUrl" type="file" class="form-control" />
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <div class="mt-3">
                        <img src="@Url.Content("~/LogoUrl/" + Model.LogoUrl)" alt="League Logo" style="max-width: 150px; max-height: 100px;" class="img-thumbnail" />
                    </div>
                }
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row mb-4">
            <div class="col-12 d-flex justify-content-end">
                <button class="btn btn-success" type="submit">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
            </div>
        </div>
    </form>
</div>
