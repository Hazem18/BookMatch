@model Models.ViewModels.MatchVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="TeamAId" class="control-label"></label>
                <select asp-for="TeamAId" id="select-teamA" placeholder="search for team...">
                    <option value="">Select a team...</option>
                    @foreach (var item in ViewBag.Teams)
                    {
                        <option value="@item.Id" data-stadium="@item.Stadium.Name">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="TeamAId" class="text-danger"></span>
            </div>

            <div id="stadium-info" class="mt-3">
                <h5>Stadium Name</h5>
                <p id="stadium-name">No stadium selected yet.</p>
            </div>




            <div class="form-group">
                <label asp-for="TeamBId" class="control-label"></label>

                <select asp-for="TeamBId" id="select-teamB" placeholder="search for team...">

                    <option value="">Select a team...</option>
                    @foreach (var item in ViewBag.Teams)
                    {

                        <option value="@item.Id">@item.Name</option>
                    }


                </select>
                <span asp-validation-for="TeamBId" class="text-danger"></span>

            </div>
            <div class="form-group mb-3" >
                <label asp-for="LeagueId" class="control-label"></label>
                <select asp-for="LeagueId" id="select-league" placeholder="search for League...">

                    <option value="">Select a League...</option>
                    @foreach (var item in ViewBag.Leagues)
                    {

                        <option value="@item.Id">@item.Name</option>
                    }


                </select>
                <span asp-validation-for="LeagueId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>


</div>


<script>
    document.getElementById('select-teamA').addEventListener('change', function () {
        const selectedOption = this.options[this.selectedIndex];
        const stadiumName = selectedOption.getAttribute('data-stadium');

        // Update the stadium info section
        document.getElementById('stadium-name').innerText = stadiumName || 'No stadium selected yet.';
    });
</script>

<script>
    new TomSelect("#select-teamA", {
        create: false,
        sortField: {
            field: "text",
            direction: "asc"
        }
    });
</script>
<script>
    new TomSelect("#select-teamB", {
        create: false,
        sortField: {
            field: "text",
            direction: "asc"
        }
    });
</script>
<script>
    new TomSelect("#select-league", {
        create: false,
        sortField: {
            field: "text",
            direction: "asc"
        }
    });
</script>

<div>
    <a asp-action="Index">Back to List</a>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
