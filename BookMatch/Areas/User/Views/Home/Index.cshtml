@model IEnumerable<Models.Match>

@{
    ViewData["Title"] = "Football Matches";
}

<div class="container">
    <h1 class="text-center mb-4" style="color: #1e7e34; font-weight: bold;">Football Fixtures</h1>

    <!-- League Buttons -->
    <div class="league-buttons-container">
        @foreach (var league in ViewBag.Leagues)
        {
            <div class="league-button">
                <a asp-action="LeagueMatches" asp-route-LeagueId="@league.Id">
                    <img src="~/LogoUrl/@league.LogoUrl" alt="@league.Name logo">
                </a>
            </div>
        }
    </div>

    <!-- Matches Section -->
    <div class="matches-container">
        @foreach (var match in Model)
        {
            <div class="match-card">
                <!-- League Section -->
                <div class="league">
                    <img src="~/LogoUrl/@match.League.LogoUrl" alt="@match.League.Name logo" class="league-logo">
                    <div class="league-name">@match.League.Name</div>
                </div>

                <!-- Team vs Team Section -->
                <div class="teams">
                    <div class="team">
                        <img src="~/Images/Teams/@match.TeamA.LogoUrl" alt="@match.TeamA.Name logo" class="team-logo">
                        <span>@match.TeamA.Name</span>
                    </div>
                    <div class="vs-text">VS</div>
                    <div class="team">
                        <img src="~/Images/Teams/@match.TeamB.LogoUrl" alt="@match.TeamB.Name logo" class="team-logo">
                        <span>@match.TeamB.Name</span>
                    </div>
                </div>

                <!-- Match Details -->
                <div class="details">
                    <div class="details-item">
                        <i class="stadium-icon"></i>
                        <span>@match.Stadium.Name</span>
                    </div>
                    <div class="details-item">
                        <i class="date-icon"></i>
                        <span>@match.DateTime.ToString("dd MMM yyyy, hh:mm tt")</span>
                    </div>
                    <div class="details-item">
                        @{
                            if (match.DateTime < DateTime.Now.AddDays(1))
                            {
                                <span class="status">
                                    Unavailable
                                </span>
                            }
                            else
                            {
                                <span class="status @(match.Status == MatchStatus.Available ? "available" : "unavailable")">
                                    @match.Status.ToString()
                                </span>
                            }
                        }
                    </div>
                </div>

                <!-- Book Ticket -->
                <div class="text-end mt-2">
                    @{
                        if(match.DateTime < DateTime.Now.AddDays(1))
                        {
                            <button disabled class="btn btn-dark ">Book Ticket</button>
                        }
                        else
                        {
                        <a asp-action="Details" asp-route-id="@match.Id" class="btn-ticket">Book Ticket</a>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f0f5f0;
        font-family: 'Arial', sans-serif;
    }

    /* League Buttons Container */
    .league-buttons-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 30px;
    }

    /* League Button */
    .league-button {
        width: 60px;  /* Same size as on the League Matches page */
        height: 60px;  /* Same size */
        border-radius: 50%;
        border: 3px solid #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #28a745;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .league-button:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 12px rgba(0, 128, 0, 0.5);
    }

    .league-button img {
        max-width: 100%;
        border-radius: 50%;
    }

    /* Matches Container */
    .matches-container {
        margin: 20px auto;
        max-width: 1100px;
    }

    /* Match Card */
    .match-card {
        display: flex;
        flex-direction: column;
        background: linear-gradient(135deg, #1e7e34, #28a745);
        color: #fff;
        border-radius: 10px;
        margin-bottom: 15px;
        padding: 15px;
        box-shadow: 0 4px 15px rgba(0, 128, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .match-card:hover {
        transform: scale(1.02);
        box-shadow: 0 6px 20px rgba(0, 128, 0, 0.5);
    }

    /* League Section */
    .league {
        text-align: center;
        margin-bottom: 15px;
    }

    .league-logo {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-bottom: 5px;
    }

    .league-name {
        font-size: 1rem;
        font-weight: bold;
        color: #ffeb3b; /* Bright yellow for emphasis */
    }

    /* Team VS Team Section */
    .teams {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .team {
        text-align: center;
        font-size: 1rem;
        font-weight: bold;
    }

    .team-logo {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-bottom: 5px;
        border: 2px solid #fff;
    }

    .vs-text {
        font-size: 1.5rem;
        font-weight: bold;
        color: #fff;
        background: rgba(255, 255, 255, 0.2);
        padding: 5px 15px;
        border-radius: 8px;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    /* Match details */
    .details {
        display: flex;
        justify-content: space-between;
        font-size: 0.85rem;
        padding: 10px 0;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .details-item {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    /* Updated Icons */
    .details-item i {
        font-size: 1rem;
        width: 20px;
        text-align: center;
    }

    .details-item i.stadium-icon {
        background: url('/Icons/stadium.png') no-repeat center center;
        background-size: contain;
    }

    .details-item i.date-icon {
        background: url('/Icons/calendar.png') no-repeat center center;
        background-size: contain;
    }

    /* Book ticket button */
    .btn-ticket {
        display: inline-block;
        background: #ffc107;
        color: #000;
        border: none;
        padding: 8px 16px;
        font-size: 0.9rem;
        border-radius: 5px;
        font-weight: bold;
        transition: all 0.3s ease;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .btn-ticket:hover {
        background: #ffd454;
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(255, 193, 7, 0.4);
    }

    /* Match status */
    .status {
        font-weight: bold;
        font-size: 0.85rem;
    }

    .status.available {
        color: #00ff00; /* Green for available */
    }

    .status.unavailable {
        color: #ff0000; /* Red for unavailable */
    }
</style>

@if (TempData["success"] != null)
{
    <div id="successToast" class="toast">
        <strong>@TempData["success"]</strong>
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var toast = $("#successToast");
            if (toast.length > 0) {
                toast.fadeIn(300).delay(3000).fadeOut(500);
            }
        });
    </script>
}

<style>
    .toast {
        position: fixed;
        top: 1rem; /* Set to 1rem from the top */
        left: 50%; /* Position it at the center */
        transform: translateX(-50%); /* Adjust for perfect centering */
        z-index: 1050;
        background-color: #28a745; /* Green background */
        color: white;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display: none; /* Initially hidden */
    }
</style>