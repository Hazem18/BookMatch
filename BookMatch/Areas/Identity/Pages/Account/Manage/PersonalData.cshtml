@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container mt-5">
    <h3 class="text-center text-success mb-4">@ViewData["Title"]</h3>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 p-4 bg-light-green">
                <p class="text-center">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p class="text-center">
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="text-center mb-4">
                    <button class="btn btn-success btn-lg" type="submit">Download Your Data</button>
                </form>
                <p class="text-center">
                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger btn-lg">Delete Account</a>
                </p>
            </div>
        </div>
    </div>
</div>
<style>
    /* Button for Download Your Data */
    #download-data button {
        border: 2px solid #28a745; /* Green border for the 'Download Your Data' button */
    }

        #download-data button:hover, #download-data button:focus {
            border-color: #218838; /* Darker green on hover/focus */
        }

    /* Button for Delete Account */
    #delete {
        border: 2px solid #28a745; /* Red border for the 'Delete Account' button */
    }

        #delete:hover, #delete:focus {
            border-color: #218838; /* Darker red on hover/focus */
        }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
