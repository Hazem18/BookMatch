@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container mt-5">
    <h3 class="text-center text-success mb-4">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="change-password-form" method="post" class="p-4 border rounded shadow-sm bg-light-green">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Old Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your old password" />
                    <label asp-for="Input.OldPassword">Old Password</label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>

                <!-- New Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
                    <label asp-for="Input.NewPassword">New Password</label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <!-- Confirm New Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
                    <label asp-for="Input.ConfirmPassword">Confirm New Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="w-100 btn btn-success btn-lg">Update Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
